{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": ["./babel.config.js", "./node_modules", "./dist"],
  "include": ["./src/index.ts"]
}
